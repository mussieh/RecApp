<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_cardview"
    app:cardBackgroundColor="@color/card_background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:layout_marginBottom="0.5dp"
    android:layout_marginTop="0.5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_image_view"
            android:contentDescription="@string/book_image"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rank_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_title_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/book_image_button"
            app:layout_constraintStart_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Cracking the coding" />

        <TextView
            android:id="@+id/rank_text_view"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12sp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="11" />

        <TextView
            android:id="@+id/author_name_view"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/book_image_button"
            app:layout_constraintStart_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toBottomOf="@+id/book_title_view"
            tools:text="Gayle Lackman" />

        <TextView
            android:id="@+id/book_type_view"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/book_image_button"
            app:layout_constraintStart_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toBottomOf="@+id/author_name_view"
            tools:text="2nd Edition" />

        <ImageView
            android:id="@+id/tv_amazon_image_view"
            android:contentDescription="@string/amazon_logo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toBottomOf="@+id/book_type_view"
            app:srcCompat="@drawable/amazon" />

        <TextView
            android:id="@+id/tv_amazon_rating"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_amazon_image_view"
            app:layout_constraintTop_toBottomOf="@+id/book_type_view"
            tools:text="4.5" />

        <ImageButton
            android:id="@+id/book_image_button"
            android:contentDescription="@string/book_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:tint="@color/colorGreyPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>